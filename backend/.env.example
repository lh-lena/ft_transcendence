# ================================================
# Backend Service - Environment Configuration
# ================================================

# Server
NODE_ENV=development
PORT=8080
HOST='0.0.0.0'

# Server Options
BODY_LIMIT=10485760
CONNECTION_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# Database
DATABASE_URL=file:app/data/database.sqlite

# File Upload
MAX_FILE_SIZE=10485760
MAX_FILES=5
MAX_FIELD_SIZE=1048576
MAX_FIELDS=10
AVATAR_DIR=./public/avatars

# Real-time
REALTIME_IP=realtime
REALTIME_PORT=8081
REALTIME_TIMEOUT=5000
REALTIME_RETRY_ATTEMPTS=3

# Features
ENABLE_SWAGGER=true
ENABLE_METRICS=true

# Logging
SLOW_REQUEST_THRESHOLD=1000
LOG_LEVEL=debug

# Leaderboard
LEADERBOARD_SIZE=8