{
  "compilerOptions": {
    "strict": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "commonjs",
    "incremental": true
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.d.ts"
  ]
}

