{
  "compilerOptions": {
    "strict": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2020",
    "module": "es2020",
    "incremental": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "isolatedModules": true
  },
  "include": ["src/**/**/*.ts", "src/**/*.d.ts"]
}
