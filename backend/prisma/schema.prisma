generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// add string string map and avatar
model User {
  id             Int          @id @default(autoincrement())
  email          String       @unique
  username       String       @unique
  password_hash  String
  is_2fa_enabled Boolean      @default(false)
  twofa_secret   String?

  gamePlayed     GamePlayed[]

  friends        Friendship[]     @relation("user")
  friended       Friendship[]     @relation("friend")

  blockedUsers   Blocked[]     @relation("blocker")
  blockedBy      Blocked[]     @relation("blocked")

  chatSent       ChatMessage[] @relation("sender")
  chatRecived    ChatMessage[] @relation("reciver")
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model Friendship {
  id       Int  @id @default(autoincrement())
  user     User @relation("user", fields: [userId], references: [id], onDelete: Cascade)
  userId   Int
  friend   User @relation("friend", fields: [friendId], references: [id], onDelete: Cascade)
  friendId Int

  createdAt DateTime @default(now())

  @@unique([userId, friendId])
}

model Blocked {
  id      Int      @id @default(autoincrement())
  user       User     @relation("blocker", fields: [userId], references: [id], onDelete: Cascade)
  userId     Int
  blocked    User     @relation("blocked", fields: [blockedId], references: [id], onDelete: Cascade)
  blockedId  Int
  createdAt  DateTime @default(now())

  @@unique([userId, blockedId])
  }

model Result {
  id         Int          @id @default(autoincrement())
  gameId     String       @unique
  status     GameStatus
  startedAt  DateTime
  finishedAt DateTime
  gamePlayed GamePlayed[]
}

model ChatMessage {
  id         Int     @id @default(autoincrement())
  sender     User     @relation("sender", fields: [senderId], references: [id], onDelete: Cascade)
  senderId   Int
  reciver    User     @relation("reciver", fields: [reciverId], references: [id], onDelete: Cascade)
  reciverId  Int
  message    String
  createdAt  DateTime @default(now())
  }

model GamePlayed {
  id       Int      @id @default(autoincrement())
  user     User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId   Int?
  result   Result?  @relation(fields: [resultId], references: [id], onDelete: Cascade)
  resultId Int?
  score    Int?
  isWinner Boolean?
}

enum GameStatus {
  finished
  cancled
  cancled_server_error
}

enum GameMode {
  pvp_remote
  pvp_ai
  tournamnet
}
