import { FastifyInstance } from 'fastify';
import { ServerContext } from '../context';
import * as TEMPLATEController from '../database/TEMPLATE/TEMPLATE.controller';

export function TEMPLATERoutes( context: ServerContext ) {
	return async function( server: FastifyInstance ) {

		server.get( '/TEMPLATE', async ( request, reply ) => {
			await TEMPLATEController.getAllorFilteredTEMPLATE( context, request, reply ) } );

		server.get( '/TEMPLATE/:id', async ( request, reply ) => {          
			await TEMPLATEController.getTEMPLATEById( context, request, reply ) } );

		server.post( '/TEMPLATE', async ( request, reply ) => {            
			await TEMPLATEController.createTEMPLATE( context, request, reply ) } );

		server.patch( '/TEMPLATE/:id', async ( request, reply ) => {
			await TEMPLATEController.updateTEMPLATE( context, request, reply ) } );

		server.delete( '/TEMPLATE/:id', async( request, reply ) => {
			await TEMPLATEController.removeEMPLATE( context, request, reply ) } );

	};
}
