# Google OAuth Configuration
# Get your credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# JWT Secrets (REQUIRED - minimum 32 characters each)
# Generate with: openssl rand -base64 32
ACCESS_TOKEN_SECRET=your_access_token_secret_minimum_32_characters
REFRESH_TOKEN_SECRET=your_refresh_token_secret_minimum_32_characters
JWT_SECRET=your_jwt_secret_minimum_32_characters_long

# Database Configuration
DATABASE_URL=file:/app/data/db.sqlite

# Auth Service Configuration
AUTH_PORT=8082
AUTH_HOST=0.0.0.0

# Backend Service URL
BACKEND_URL=http://backend:8080
