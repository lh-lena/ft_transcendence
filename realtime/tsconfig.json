/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */

{
    "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM"],
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./",
    "jsx": "preserve",
    "paths": {
        "*": [
        "node_modules/*",
        "src/*"
        ]
    },
    "typeRoots": [
        "./node_modules/@types",
        "./src/types"
    ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tmp"
    ],
    "ts-node": {
        "esm": true
    }
}
