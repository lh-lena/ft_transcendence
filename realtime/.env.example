# Node environment
NODE_ENV=development

# Server settings
PORT=8081
HOST=0.0.0.0
LOG_LEVEL=info

# WebSocket settings
WS_CONNECTION_TIMEOUT=50000
WS_HEARTBEAT_INTERVAL=30000
WS_PAUSE_TIMEOUT=60000
WS_MAX_CONNECTIONS=100

# Backend and Auth URLs
BACKEND_URL=https://127.0.0.1:8081
AUTH_URL=https://127.0.0.1:8081

# Allowed origins for CORS/WebSocket
ALLOWED_ORIGINS=http://127.0.0.1:5000,http://127.0.0.1:5001

# Allowed service IPs for internal routing
ALLOWED_SERVICE_IPS=http://backend:8082