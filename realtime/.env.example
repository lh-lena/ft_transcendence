# Realtime Service Configuration

# Node Environment
NODE_ENV=development

# Server Settings
WS_PORT=8081
WS_HOST=0.0.0.0
LOG_LEVEL=debug

# WebSocket Settings
WS_CONNECTION_TIMEOUT=60000
WS_HEARTBEAT_INTERVAL=30000
WS_PAUSE_TIMEOUT=60000
WS_MAX_CONNECTIONS=100

# Service URLs
BACKEND_URL=http://backend:8080
AUTH_URL=http://auth-service:8082

# Allowed origins for WebSocket
ALLOWED_ORIGINS=http://127.0.0.1:5000,http://127.0.0.1:5001

# Allowed service IPs for internal routing
ALLOWED_SERVICE_IPS=http://backend:8082

# AI Configuration
AI_INTERVAL=1000
